from transom_targets import *

site.output_dir = "docs"

@target
def generate_docs(docs_dir="input/docs"):
    check_program("antora")

    playbook = get_absolute_path("scripts/docs-playbook.yaml")
    docs_dir = get_absolute_path(docs_dir)

    with working_dir():
        run(f"antora --fetch {playbook}")

        for path in find("build", "*.html"):
            move(path, f"{path}.in")

        copy(f"build/skupper/latest/overview", docs_dir)
